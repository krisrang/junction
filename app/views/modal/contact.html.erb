<div class="profile-info">
  <button class="close" data-dismiss="modal">Ã—</button>
  <div class="profile-name">
    <h2>Contact</h2>
  </div>
  <p>
    Use the links on the left or leave me a message:
  </p>
  
  <%= form_tag send_contact_path, remote: true do %>
    <p>
      <label>Your email</label>
      <input type="text" name="email">
      <span class="help-block">Let me know where I can get back to you. No spam, I promise.</span>
    </p>

    <p>
      <label>Message</label>
      <textarea name="message"></textarea>
    </p>

    <p>
      <input type="submit" value="Send" id="contact_submit" />
      <span class="contact_send_feedback">Message sent</span>
    </p>
  <% end %>
</div>
